# Database
DATABASE_URL=postgres://user:password@host.neon.tech/database?sslmode=require

# Vercel Blob Storage (for images)
BLOB_READ_WRITE_TOKEN=vercel_blob_...

# Authentication (Two-tier password system)
# Site password - required to view any content
VITE_SITE_PASSWORD=yourSitePassword
# Edit password - additional password to enable editing
VITE_EDIT_PASSWORD=yourEditPassword

# Hashed versions for production (bcrypt hashes)
SITE_PASSWORD_HASH=
EDIT_PASSWORD_HASH=

# Optional: Site branding
VITE_SITE_NAME="The Pt. Lawrence Project"
VITE_SITE_TAGLINE="Orcas Island History & Family Archive"
